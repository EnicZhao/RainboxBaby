<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/mEmptyLayout"
    android:background="@color/common_bg_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/mLoadingView"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/anim_loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mNoDataView"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="@string/ic_no_data"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:textColor="@color/font_color_gray"
        android:drawableTop="@mipmap/ic_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mNoNetView"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="@string/ic_no_data"
        android:textSize="12sp"
        android:textColor="@color/font_color_gray"
        android:drawableTop="@mipmap/icon_default_page_cartoon_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>